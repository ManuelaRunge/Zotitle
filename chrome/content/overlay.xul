<?xml version="1.0"?>

<!DOCTYPE overlay SYSTEM "chrome://zotitle/locale/overlay.dtd">

<overlay
    id="zotitle"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script src="chrome://zotitle/content/scripts/zotitle.js"/>
    <script src="chrome://zotero/content/include.js"/>

    <stringbundleset id="stringbundleset">
        <stringbundle
            id="zotitle-bundle"
            src="chrome://zotitle/locale/zotitle.properties"/>
    </stringbundleset>

    <popup
        id="zotero-itemmenu">
        <menu class="menu-iconic" id="zotero-itemmenu-zotitle-menu" label="&zotitle-menu-label;">
            <menupopup id="zotero-itemmenu-zotitle-menupopup">
                <menuitem
                    id="zotero-itemmenu-zotitle-upper"
                    label="&zotitle-menu-upper-label;"
                    oncommand="Zotero.ChangeTitleCase.updateSelectedItems('upper')"/>
                <menuitem
                    id="zotero-itemmenu-zotitle-inspire"
                    label="&zotitle-menu-inspire-label;"
                    oncommand="Zotero.ChangeTitleCase.updateSelectedItems('inspire')"/>
                <menuitem
                    id="zotero-itemmenu-zotitle-ads"
                    label="&zotitle-menu-ads-label;"
                    oncommand="Zotero.ChangeTitleCase.updateSelectedItems('ads')"/>
                <menuitem
                    id="zotero-itemmenu-zotitle-semanticscholar"
                    label="&zotitle-menu-semanticscholar-label;"
                    oncommand="Zotero.ChangeTitleCase.updateSelectedItems('semanticscholar')"/>
            </menupopup>
        </menu>
    </popup>
    
</overlay>
